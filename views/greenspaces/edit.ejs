<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Green Space</h1>
  <div class="col-6 offset-3">
    <form
      action="/greenspaces/<%= greenspace._id%>?_method=PUT"
      method="POST"
      class="validated-form"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="greenspace[title]"
          value="<%=greenspace.title%>"
          required
        />
        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="greenspace[location]"
          value="<%=greenspace.location%>"
          required
        />
        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="greenspace[image]"
          value="<%=greenspace.image%>"
          required
        />
        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="fee">Entrance Fee</label>
        <div class="input-group">
          <span class="input-group-text" id="fee-label">â‚¬</span>
          <input
            name="greenspace[fee]"
            type="text"
            class="form-control"
            id="fee"
            placeholder="0.00"
            aria-label="fee"
            aria-describedby="fee-label"
            value="<%=greenspace.fee%>"
            required
          />
          <div class="valid-feedback">Looks good</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          name="greenspace[description]"
          id="description"
          class="form-control"
          required
        >
      <%=greenspace.description%>
      </textarea
        >
        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Green Space</button>
      </div>
    </form>
    <a href="/greenspaces/<%=greenspace._id%>">Back to Green Space</a>
  </div>
</div>
